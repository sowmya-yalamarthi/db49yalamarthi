block content
  h1= title
- let dogs=results
    
div(class="container-fluid mt-3")
div(class="row")
        each dog,index in dogs
            div(class="col-sm-2 bg-warning m-1 p-3" onclick=`buy(${index})`) #{dog.dogname} - #{dog.age} - #{dog.breed}
    script.
     
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }
  