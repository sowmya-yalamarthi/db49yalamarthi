extends layout

block content
  h1= title
  - let dogs=results
    
  div(class="container-fluid")
  - let createdestination = `dispatch(\"/dog/create/")`
    button.btn( class="btn-primary ml-1", onclick= createdestination) create
    div(class="row m-1")
    each dog in dogs
      - let destination = `dispatch(\"/dog/update/?id=${dog._id}\")`
      - let detaildestination = `dispatch(\"/dog/detail/?id=${dog._id}\")`
      - let deletedestination = `dispatch(\"/dog/delete/?id=${dog._id}\")`
      div(class="row-sm-2", class="m-1") dog #{dog.dogname}(#{dog.age}) is #{dog.breed}
      button.btn( class="btn-primary ml-1", onclick= destination) Update
      button.btn( class="btn-primary ml-1", onclick= detaildestination) Detail
      button.btn( class="btn-primary ml-1", onclick= deletedestination) Delete

  script.
    function dispatch(path){
      window.location.href=path
    }
  